{
  "name": "express-server-template",
  "version": "1.0.0",
  "description": "Express Server Template",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "PORT=3000 node ./dist/app.js",
    "test": "PORT=3001 nyc mocha --require ts-node/register test/**/*.ts"
  },
  "license": "Unlicense",
  "dependencies": {
    "cors": "^2.8.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "helmet": "^3.23.2",
    "jsonwebtoken": "^8.2.2",
    "mikro-orm": "^3.6.15",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "uuid": "^8.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.47",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^7.3.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./app.ts"
    ],
    "exec": "DEBUG=express:* PORT=3000 ts-node app.ts",
    "ext": "ts"
  }
}
